@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
<div class="container">
    <div class="col-md-6 offset-3 alert alert-danger text-center">
        <h2>@localizer["Your are not allowed to access this page"]</h2>
        <p>@localizer["Please, click the button below to be redirected to the home page."]</p>
        <hr />
        <p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-success">@localizer["Home page"]</a>
        </p>
    </div>
</div>